<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
        android:id="@+id/rsTime"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:padding="2dp"
        android:layout_alignParentTop="true"
        android:text="10:00"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/rsDate"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/rsTime"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:padding="2dp"
            android:text="10:00"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varaus 1"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/rsTime"
            android:layout_toRightOf="@+id/rsTime"/>


        <TextView
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin1"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/rsTime"
            android:layout_toRightOf="@+id/rsDate"
            android:text="LINE 2"
            android:textSize="15dp" />

        <Button
            android:id="@+id/editRes"
            android:layout_width="155dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/clock"
            android:layout_alignLeft="@+id/clock"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="241dp"
            android:layout_marginLeft="241dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="MUOKKAA" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>